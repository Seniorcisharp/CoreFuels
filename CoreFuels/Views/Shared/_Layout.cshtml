@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - My MVC App</title>
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="logo">Startup Sports</div>
            <ul class="nav-links">
                @if (!User.Identity.IsAuthenticated)
                {
                    <li><a href="/Login/UserPage">Login</a></li>
                    <li><a href="/Authorization/Index">Sign Up</a></li>
                }
                else
                    
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userMenu" data-bs-toggle="dropdown">
                            <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" width="30" height="30" class="rounded-circle" />
                            @User.Identity.Name
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="userMenu">
                            <li>
                                <form asp-controller="Login" asp-action="Logout" method="post">
                                    <button type="submit">Выйти</button>
                                </form>

                            </li>
                        </ul>
                    </li>
                }

            </ul>
        </nav>

    </header>
    @RenderSection("Head", required: false)
    <main>
        @RenderBody()
    </main>

    @RenderSection("Script", required: false)

</body>
</html>
<style>
    * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      
        background-image: url('/Images/7.jpg'); /* Укажи свой путь */
        background-size: cover; /* Масштабирование без потери пропорций */
        background-position: center; /* Центрирование */
        background-repeat: no-repeat; /* Без повторения */
        background-attachment: fixed; /* Фон остаётся на месте при прокрутке */
        image-rendering: crisp-edges; /* Улучшает чёткость */

    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    overflow: hidden;
}

/* Smooth transitions across the page */
html {
    scroll-behavior: smooth;
    transition: all 0.3s ease;
}

    .container {
        height: 500px;
        position: relative;
        background: rgba(140, 140, 140, 0.1);
        padding: 100px 40px 40px; /* Верхний отступ для пространства под полукруг */
        border-radius: 200px 200px 20px 20px; /* Скругление: верхние углы - 200px, нижние - 20px */
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.6);
        width: 600px; /* Ширина контейнера */
        color: #ffffff;
        text-align: center;
        border: none;
        transition: all 0.5s ease-in-out;
        overflow: hidden;
        backdrop-filter: blur(14px) saturate(192%);
        -webkit-backdrop-filter: blur(12px) saturate(192%);
        border: 1px solid rgba(209, 213, 219, 0.3);
    }





        .container:hover {
            transform: scale(1.05);
            box-shadow: 0 30px 60px rgba(0, 0, 0, 0.8);
            background: rgba(255, 255, 255, 0.15);
        }

