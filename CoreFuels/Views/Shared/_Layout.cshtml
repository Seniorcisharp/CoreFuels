@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - My MVC App</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Segoe+UI:wght@400;600&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="logo">Startup Sports</div>
            <ul class="nav-links">
                @if (!User.Identity.IsAuthenticated)
                {
                    <li><a href="/Login/UserPage">Login</a></li>
                    <li><a href="/Authorization/Index">Sign Up</a></li>
                }
                else
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userMenu">
                            <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" width="30" height="30" class="rounded-circle" />
                            @User.Identity.Name
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <form asp-controller="Login" asp-action="Logout" method="post">
                                    <button type="submit" class="logout-btn">Logout</button>
                                </form>
                            </li>
                        </ul>
                    </li>
                }
            </ul>
        </nav>
    </header>

    @RenderSection("Head", required: false)
    <main>
        <div class="container">
            <div class="cf-logo">CF</div>
            @RenderBody()
        </div>
    </main>
    @RenderSection("Script", required: false)
</body>
</html>

<style>
    :root {
        --primary-color: #928dab;
        --secondary-color: #6f5c8c;
        --accent-color: #ff6b6b;
        --dark-color: #2d3436;
        --light-color: #f5f6fa;
        --glass-effect: rgba(140, 140, 140, 0.1);
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-image: url('/Images/7.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    /* ================= NAVBAR (improved) ================== */
    header {
        position: fixed;
        width: 100%;
        top: 0;
        left: 0;
        z-index: 1000;
        background: rgba(0, 0, 0, 0.4);
        backdrop-filter: blur(8px);
        padding: 10px 40px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.5);
    }

    .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .logo {
        font-size: 1.8rem;
        font-weight: bold;
        color: #fff;
        transition: transform 0.2s ease;
    }

        .logo:hover {
            transform: scale(1.1);
        }

    .nav-links {
        list-style: none;
        display: flex;
        align-items: center;
        gap: 25px;
    }

        .nav-links a {
            color: #ffffff;
            text-decoration: none;
            font-size: 1rem;
            font-weight: bold;
            padding: 10px 20px;
            transition: all 0.3s ease;
            border-radius: 25px;
        }

            .nav-links a:hover {
                background: #928dab;
                color: white;
                box-shadow: 0 4px 10px rgba(146, 141, 171, 0.7);
                transform: translateY(-2px);
            }

    /* ================= ORIGINAL CONTAINER STYLE ================== */
    .container {
        height: 500px;
        position: relative;
        background: rgba(140, 140, 140, 0.1);
        padding: 100px 40px 40px;
        border-radius: 200px 200px 20px 20px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.6);
        width: 600px;
        color: #ffffff;
        text-align: center;
        border: none;
        transition: all 0.5s ease-in-out;
        overflow: hidden;
        backdrop-filter: blur(14px) saturate(192%);
        -webkit-backdrop-filter: blur(12px) saturate(192%);
        border: 1px solid rgba(209, 213, 219, 0.3);
    }

        .container:hover {
            transform: scale(1.05);
            box-shadow: 0 30px 60px rgba(0, 0, 0, 0.8);
            background: rgba(255, 255, 255, 0.15);
        }

    .title {
        font-size: 2.5rem;
        color: #ff6b6b;
        margin-bottom: 20px;
        letter-spacing: 2px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
    }

    .textbox {
        width: 100%;
        padding: 15px 20px;
        margin: 15px 0;
        border: none;
        border-radius: 10px;
        font-size: 1rem;
        background: rgba(255, 255, 255, 0.9);
        color: #333;
        transition: all 0.4s ease;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

        .textbox:focus {
            outline: none;
            background: #ffffff;
            box-shadow: 0 0 15px rgba(255, 107, 107, 0.6);
            transform: scale(1.02);
        }

    .submit-btn {
        width: 100%;
        padding: 15px;
        background-color: #928dab;
        color: white;
        font-size: 1.2rem;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease, box-shadow 0.2s ease;
    }

    .cf-logo {
        font-size: 5.5rem;
        font-weight: 900;
        color: #fff;
        margin: -10px 0 30px;
        text-shadow: 3px 3px 0 #aaa, 6px 6px 0 rgba(0,0,0,0.2), 8px 8px 15px rgba(0,0,0,0.3);
        position: relative;
        display: inline-block;
        transform: perspective(500px) rotateX(10deg);
        transition: all 0.4s ease;
        font-family: 'Arial Black', sans-serif;
        letter-spacing: 2px;
    }

        .cf-logo:hover {
            transform: perspective(500px) rotateX(15deg) scale(1.05);
            text-shadow: 4px 4px 0 #ccc, 8px 8px 0 rgba(0,0,0,0.2), 12px 12px 20px rgba(0,0,0,0.4);
            color: #f8f8f8;
        }

        .submit-btn:hover {
            background-color: #6f5c8c;
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(146, 141, 171, 0.7);
        }

    .additional-link {
        margin-top: 15px;
        font-size: 0.9rem;
        color: #8d99ae;
    }

        .additional-link a {
            color: #928dab;
            text-decoration: none;
            transition: color 0.3s ease, transform 0.2s ease;
        }

            .additional-link a:hover {
                color: #6f5c8c;
                text-decoration: underline;
                transform: scale(1.05);
            }

    /* ================= IMPROVED DROPDOWN ================== */
    .nav-item.dropdown {
        position: relative;
    }

    .dropdown-menu {
        position: absolute;
        top: 100%;
        right: 0;
        background: rgba(255, 255, 255, 0.95);
        border-radius: 10px;
        padding: 10px;
        min-width: 150px;
        box-shadow: 0 6px 12px rgba(0,0,0,0.3);
        z-index: 1001;
        opacity: 0;
        visibility: hidden;
        transform: translateY(10px);
        transition: all 0.3s ease;
    }

    .nav-item.dropdown:hover .dropdown-menu {
        opacity: 1;
        visibility: visible;
        transform: translateY(0);
    }

    .logout-btn {
        background: #f44336;
        color: #fff;
        border: none;
        padding: 10px 15px;
        width: 100%;
        font-weight: bold;
        border-radius: 8px;
        cursor: pointer;
        transition: background 0.3s ease;
    }

        .logout-btn:hover {
            background: #d32f2f;
        }

    /* ================= OTHER ELEMENTS ================== */
    .alert {
        padding: 10px;
        margin-bottom: 20px;
        border-radius: 5px;
        font-weight: bold;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.3);
        opacity: 0.9;
        transition: opacity 0.3s ease;
    }

        .alert:hover {
            opacity: 1;
        }

    .alert-success {
        background-color: #4caf50;
        color: white;
    }

    .alert-danger {
        background-color: #f44336;
        color: white;
    }

    .fruit, .jersey {
        display: inline-block;
        font-size: 6rem;
        color: #ff6b6b;
        margin-bottom: 15px;
        text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.7);
        font-weight: bold;
        transition: color 0.3s ease-in-out, transform 0.3s ease;
        margin-top: -5px;
    }

    
        .fruit:hover, .jersey:hover {
            color: #ff4b4b;
            transform: rotate(5deg);
        }

        .fruit img, .jersey img {
            width: 200px;
            height: auto;
        }

    {
        width: 90%;
        padding: 80px 20px 30px;
        border-radius: 100px 100px 20px 20px;
    }

    header {
        padding: 10px 20px;
    }

    .nav-links {
        gap: 15px;
    }

        .nav-links a {
            padding: 8px 15px;
            font-size: 0.9rem;
        }

    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Smooth animations for elements
        const animateElements = function() {
            const elements = document.querySelectorAll('.container, .alert');
            elements.forEach(el => {
                const elementTop = el.getBoundingClientRect().top;
                const windowHeight = window.innerHeight;

                if (elementTop < windowHeight - 100) {
                    el.style.opacity = '1';
                    el.style.transform = 'translateY(0)';
                }
            });
        };

        // Set initial state
        document.querySelectorAll('.container, .alert').forEach(el => {
            el.style.opacity = '0';
            el.style.transform = 'translateY(20px)';
            el.style.transition = 'all 0.5s ease-out';
        });

        // Run on load and scroll
        window.addEventListener('load', animateElements);
        window.addEventListener('scroll', animateElements);
    });
</script>