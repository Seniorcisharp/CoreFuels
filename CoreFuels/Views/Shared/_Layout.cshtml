.title {
    font-size: 2.5rem;
    color: #ff6b6b;
    margin-bottom: 20px;
    letter-spacing: 2px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
    animation: glow 1.5s infinite alternate;
}

/* Title glowing effect */

.textbox {
    width: 100%;
    padding: 15px 20px;
    margin: 15px 0;
    border: none;
    border-radius: 10px;
    font-size: 1rem;
    background: rgba(255, 255, 255, 0.9);
    color: #333;
    transition: all 0.4s ease;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}

.textbox:focus {
    outline: none;
    background: #ffffff;
    box-shadow: 0 0 15px rgba(255, 107, 107, 0.6);
    transform: scale(1.02);
}

.submit-btn {
    width: 100%;
    padding: 15px;
    background-color: #928dab;
    color: white;
    font-size: 1.2rem;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease, box-shadow 0.2s ease;
}

.submit-btn:hover {
    background-color: #6f5c8c;
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(146, 141, 171, 0.7);
}

.additional-link {
    margin-top: 15px;
    font-size: 0.9rem;
    color: #8d99ae;
}

.additional-link a {
    color: #928dab;
    text-decoration: none;
    transition: color 0.3s ease, transform 0.2s ease;
}

.additional-link a:hover {
    color: #6f5c8c;
    text-decoration: underline;
    transform: scale(1.05);
}

.alert {
    padding: 10px;
    margin-bottom: 20px;
    border-radius: 5px;
    font-weight: bold;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.3);
    opacity: 0.9;
    transition: opacity 0.3s ease;
}

.alert:hover {
    opacity: 1;
}

.alert-success {
    background-color: #4caf50;
    color: white;
}

.alert-danger {
    background-color: #f44336;
    color: white;
}

/* Navbar styles */
header {

    position: fixed;
    width: 100%;
    top: 0;
    left: 0;
    z-index: 1000;
    transition: all 0.3s ease;
}


.navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px 50px;
}

.logo {
    font-size: 1.8rem;
    font-weight: bold;
    color: #928dab;
    transition: transform 0.2s ease;
}

.logo:hover {
    transform: scale(1.1);
}

.nav-links {
    list-style: none;
    display: flex;
    gap: 30px;
}

.nav-links a {
    color: #ffffff;
    text-decoration: none;
    font-size: 1.1rem;
    font-weight: bold;
    padding: 10px 20px;
    transition: all 0.3s ease;
    border-radius: 25px;
}

.nav-links a:hover {
    background: #928dab;
    color: #ffffff;
    box-shadow: 0 4px 10px rgba(146, 141, 171, 0.7);
    transform: translateY(-3px);
}

    .main {
        padding-top: 100px;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        gap: 200px; /* Увеличено расстояние между элементами */

    }

    /* Fruit style animation */
    .fruit {
        
        color: #ff6b6b;
        margin-bottom: 15px;
        text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.7);
        font-weight: bold;
        transition: color 0.3s ease-in-out, transform 0.3s ease;
        margin-top: -100px; /* Опущено ниже */
    }

        .fruit img {
            width: 100px; /* или другой нужный размер */
            height: auto; /* чтобы сохранить пропорции */
        }

        .fruit:hover {
            color: #ff4b4b;
            transform: rotate(-5deg);
        }

    /* Jersey style animation */
    .jersey {
        font-size: 6rem;
        color: #ff6b6b;
        margin-bottom: 15px;
        text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.7);
        font-weight: bold;
        transition: color 0.3s ease-in-out, transform 0.3s ease;
        margin-top: -100px; /* Опущено ниже */
    }
         .jersey img{
        width: 100px;
        height: auto;
          }

        .jersey:hover {
            color: #ff4b4b;
            transform: rotate(5deg);
        }

    .jersey, .fruit {
        display: inline-block;
    }


    /* Smooth button animations */
button {
    transition: all 0.3s ease;
    border: none;
    border-radius: 10px;
}

button:hover {
    transform: scale(1.05);
}
</style>
