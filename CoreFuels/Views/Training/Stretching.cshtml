<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Выбор тренировки</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --secondary-gradient: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            --cardio-gradient: linear-gradient(135deg, #ff7e5f 0%, #feb47b 100%);
            --strength-gradient: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            --stretching-gradient: linear-gradient(135deg, #a1c4fd 0%, #c2e9fb 100%);
        }

        body {
            background: url('https://images.unsplash.com/photo-1571019613454-1cb2f99b2d8b?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80') no-repeat center center fixed;
            background-size: cover;
            min-height: 100vh;
            margin: 0;
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
            overflow: hidden;
            position: relative;
        }

            body::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.7);
                z-index: -1;
            }

        .container {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(15px);
            -webkit-backdrop-filter: blur(15px);
            border-radius: 25px;
            border: 1px solid rgba(255, 255, 255, 0.18);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.5);
            padding: 40px;
            width: 100%;
            max-width: 500px;
            color: white;
            transform: scale(0.9);
            opacity: 0;
        }

        .card-title {
            font-size: 2.2rem;
            font-weight: 700;
            margin-bottom: 30px;
            background: linear-gradient(to right, #fff, #c9d6ff);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            text-align: center;
        }

        .workout-options {
            display: grid;
            gap: 20px;
            margin-bottom: 30px;
        }

        .workout-option {
            position: relative;
            overflow: hidden;
            border-radius: 15px;
            height: 80px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
            transform: translateY(0);
        }

            .workout-option:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.4);
            }

            .workout-option input {
                position: absolute;
                opacity: 0;
            }

            .workout-option label {
                position: relative;
                z-index: 2;
                color: white;
                font-size: 1.2rem;
                font-weight: 600;
                display: flex;
                align-items: center;
                gap: 10px;
            }

            .workout-option i {
                font-size: 1.5rem;
            }

        #cardio {
            background: var(--cardio-gradient);
        }

        #strength {
            background: var(--strength-gradient);
        }

        #stretching {
            background: var(--stretching-gradient);
        }

        .workout-option input:checked + label::after {
            content: '\f00c';
            font-family: 'Font Awesome 6 Free';
            font-weight: 900;
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 1.2rem;
        }

        .btn-start {
            background: var(--primary-gradient);
            border: none;
            border-radius: 12px;
            padding: 15px;
            font-size: 1.1rem;
            font-weight: 600;
            letter-spacing: 1px;
            color: white;
            width: 100%;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
            position: relative;
            overflow: hidden;
        }

            .btn-start:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 25px rgba(102, 126, 234, 0.6);
            }

            .btn-start::after {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
                transition: 0.5s;
            }

            .btn-start:hover::after {
                left: 100%;
            }

        /* Анимированные частицы фона */
        .particles {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
        }

        .particle {
            position: absolute;
            background: rgba(255, 255, 255, 0.6);
            border-radius: 50%;
            pointer-events: none;
        }
    </style>
</head>
<body>
    <!-- Анимированные частицы фона -->
    <div class="particles" id="particles"></div>

    <div class="container">
        <div class="card animate__animated" id="workout-card">
            <h1 class="card-title">Выберите тренировку</h1>

            <form id="workoutForm">
                <div class="workout-options">
                    <div class="workout-option animate__animated" id="cardio">
                        <input type="radio" class="btn-check" name="workout" id="cardio-input" value="Кошка-Корова" autocomplete="off">
                        <label for="cardio-input">
                            <i class="fas fa-running"></i> Кошка-Корова
                        </label>
                    </div>

                    <div class="workout-option animate__animated" id="strength">
                        <input type="radio" class="btn-check" name="workout" id="strength-input" value="Берпи" autocomplete="off">
                        <label for="strength-input">
                            <i class="fas fa-dumbbell"></i> Берпи
                        </label>
                    </div>

                    <div class="workout-option animate__animated" id="stretching">
                        <input type="radio" class="btn-check" name="workout" id="stretching-input" value="Выпад с Наклоном" autocomplete="off">
                        <label for="stretching-input">
                            <i class="fas fa-spa"></i> Выпад с Наклоном 
                        </label>
                    </div>
                </div>

                <button type="submit" class="btn-start animate__animated">
                    <i class="fas fa-play-circle"></i> Начать
                </button>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Создание частиц фона
            function createParticles() {
                const container = document.getElementById('particles');
                const particleCount = 30;

                for (let i = 0; i < particleCount; i++) {
                    const particle = document.createElement('div');
                    particle.classList.add('particle');

                    // Случайные параметры
                    const size = Math.random() * 5 + 2;
                    const posX = Math.random() * window.innerWidth;
                    const posY = Math.random() * window.innerHeight;
                    const opacity = Math.random() * 0.4 + 0.1;
                    const duration = Math.random() * 20 + 10;
                    const delay = Math.random() * 5;

                    particle.style.width = `${size}px`;
                    particle.style.height = `${size}px`;
                    particle.style.left = `${posX}px`;
                    particle.style.top = `${posY}px`;
                    particle.style.opacity = opacity;
                    particle.style.borderRadius = '50%';

                    // Анимация частицы
                    animateParticle(particle, duration, delay);

                    container.appendChild(particle);
                }
            }

            // Анимация частицы
            function animateParticle(particle, duration, delay) {
                setTimeout(() => {
                    const startX = parseFloat(particle.style.left);
                    const startY = parseFloat(particle.style.top);

                    function updateParticle(time) {
                        const elapsed = (time - startTime) / 1000;
                        const newX = startX + Math.sin(elapsed * 0.5) * 100;
                        const newY = startY - elapsed * 50;

                        particle.style.left = `${newX}px`;
                        particle.style.top = `${newY}px`;

                        if (newY < -50) {
                            particle.style.top = `${window.innerHeight + 50}px`;
                            startTime = time;
                        } else {
                            requestAnimationFrame(updateParticle);
                        }
                    }

                    let startTime = performance.now();
                    requestAnimationFrame(updateParticle);
                }, delay * 1000);
            }

            // Инициализация частиц
            createParticles();

            // Анимация появления карточки
            const card = document.getElementById('workout-card');
            setTimeout(() => {
                card.classList.add('animate__fadeInUp');
                card.style.opacity = '1';
                card.style.transform = 'scale(1)';

                // Анимация появления опций
                const options = document.querySelectorAll('.workout-option');
                options.forEach((option, index) => {
                    setTimeout(() => {
                        option.classList.add('animate__fadeInRight');
                        option.style.opacity = '1';
                    }, index * 150 + 300);
                });

                // Анимация кнопки
                const btn = document.querySelector('.btn-start');
                setTimeout(() => {
                    btn.classList.add('animate__fadeInUp');
                    btn.style.opacity = '1';
                }, 900);
            }, 100);

            // Обработка выбора тренировки
            const form = document.getElementById('workoutForm');
            form.addEventListener('submit', function (event) {
                event.preventDefault();
                const selected = document.querySelector('input[name="workout"]:checked');

                if (selected) {
                    // Анимация перед переходом
                    card.classList.remove('animate__fadeInUp');
                    card.classList.add('animate__fadeOutDown');

                    setTimeout(() => {
                        switch (selected.value) {
                            case 'Кошка-Корова':
                                window.location.href = '/Training/Materials/CatCow';
                                break;
                            case 'Берпи':
                                window.location.href = '/Training/Materials/';
                                break;
                            case 'Выпад с Наклоном жим':
                                window.location.href = '/Training/Materials/Liftingbarbell';
                                break;
                        }
                    }, 500);
                } else {
                    // Анимация "тряски" если ничего не выбрано
                    card.classList.add('animate__shakeX');
                    setTimeout(() => {
                        card.classList.remove('animate__shakeX');
                    }, 1000);
                }
            });

            // Эффект при наведении на опции
            const workoutOptions = document.querySelectorAll('.workout-option');
            workoutOptions.forEach(option => {
                option.addEventListener('mouseenter', function () {
                    this.style.transform = 'translateY(-5px) scale(1.02)';
                });

                option.addEventListener('mouseleave', function () {
                    this.style.transform = 'translateY(0) scale(1)';
                });
            });
        });
    </script>
</body>
</html>